    <hr/>
    <div class="row my-3">
        <div class="col-6 mx-auto">
            <h3>Add Ships</h3>
            <form action="/ships/add" method="post">
                <div class="mb-3">
                    <label class="form-label">Name :</label>
                    <input type="text" class="form-control" name="title" placeholder="Ex : JS for dummies,.." required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Type :</label>
                    <select class="form-select" name="category" aria-label="Default select example">
                        <!-- <option selected>Choose category..</option> -->
                        <option value="Caravel">Caravel</option>
                        <option value="Galleon">Galleon</option>
                        
                      </select>
                    
                </div>
                <div class="mb-3">
                    <label class="form-label">Power :</label>
                    <input type="number" class="form-control" name="price" placeholder="Must be a number" required>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-block btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
